{
  "compilerOptions": {
    "rootDir": "src",
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [ "es2017", "es7", "es6", "dom" ],
    "strict": true,
    "declaration": true,
    "esModuleInterop": true
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "lib"
  ]
}
