{
  "compilerOptions": {
      "target": "es5",
      "moduleResolution": "node",
      "typeRoots": [
          "./src/types",
          "./node_modules/@types"
      ],
      "module": "esnext",
      "lib": [
          "es2017",
          "es7",
          "es6",
          "dom"
      ],
      "declaration": true,
      "outDir": "lib/esm",
      "esModuleInterop": true,
      "strict": true
  },
  "include": ["./src", "index.ts"],
  "exclude": [
      "node_modules",
      "lib",
      "dist"
  ]
}
